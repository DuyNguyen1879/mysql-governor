# logrotate config for mysql-governor

/var/log/dbgovernor-error.log {
    missingok
    rotate 15
    size=300M
    compress
    copytruncate
    postrotate
        /usr/sbin/service db_governor restart
    endscript
}

/var/log/dbgovernor-restrict.log {
    missingok
    rotate 15
    size=300M
    compress
    copytruncate
    postrotate
        /usr/sbin/service db_governor restart
    endscript
}

